<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/editor_title_icon"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/editor_title_text"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:ellipsize="middle"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:text="Hi Korea!"
                android:padding="@dimen/textPadding"/>
        </LinearLayout>
        <EditText
            android:id="@+id/editor_text"
            android:layout_weight="1"
            android:gravity="top"
            android:fontFamily="monospace"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/editor_do_save"
        android:src="@drawable/icn_file_save_light"
        style="@style/CircleButton.BottomRight"/>
</RelativeLayout>