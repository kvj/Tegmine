<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@android:color/background_light</item>
        <item name="colorPrimaryDark">@android:color/primary_text_light</item>
    </style>
    
    <style name="CircleButton">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <!--<item name="android:elevation">10dp</item>-->
        <item name="android:background">@drawable/circle</item>
    </style>
    <style name="CircleButton.BottomRight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <!--<item name="android:stateListAnimator">@anim/circle_btn_anim</item>-->
    </style>
    <style name="CircleButton.BottomLeft">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <!--<item name="android:stateListAnimator">@anim/circle_btn_anim</item>-->
    </style>

</resources>
