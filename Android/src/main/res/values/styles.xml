<resources>
    <color name="textLight">@android:color/primary_text_light</color>
    <color name="textDark">@android:color/primary_text_dark</color>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#CDDC39</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">#CDDC39</item>
    </style>

    <style name="AppDialogLight" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppDialogDark" parent="Theme.AppCompat.DialogWhenLarge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CircleButton">
        <item name="elevation">@dimen/button_elevation</item>
    </style>
    <style name="CircleButton.BottomRight">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="CircleButton.BottomLeft">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    <style name="widget_bg">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="widget_text" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@null</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2sp</item>
        <item name="android:typeface">monospace</item>
    </style>
    <style name="widget_text.title" parent="widget_text">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="widget_IconButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
